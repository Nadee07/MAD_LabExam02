<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imglogo5"
            android:layout_width="128dp"
            android:layout_height="118dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imguser"
        android:layout_width="100dp"
        android:layout_height="94dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="830dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imglogo5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/userprofile"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHi"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:text="Hi Jenny"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#EDE7F6"
            android:text="Find your best cakes"
            android:textColor="#672F2525"
            android:textSize="28sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtBrowse"
            android:layout_width="414dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:text="Browse by category"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:padding="10dp"
        tools:ignore="MissingConstraints">


    <LinearLayout
            android:id="@+id/categoryLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <Button
            android:id="@+id/btnAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/purple5"
            android:padding="10dp"
            android:text="All"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <Button
                android:id="@+id/btnBirthdayCake"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#ececec"
                android:padding="10dp"
                android:text="Birthday Cake"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnWeddingCake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#ececec"
                android:padding="10dp"
                android:text="Wedding Cake"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnChocolateCake"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#ececec"
                android:padding="10dp"
                android:text="Chocolate Cake"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="423dp"
        android:layout_height="631dp"
        android:layout_marginTop="320dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="206dp"
            android:layout_height="267dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="390dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/chococakes" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="183dp"
            android:layout_height="250dp"
            android:layout_marginStart="220dp"
            android:layout_marginBottom="390dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/weddingcake" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="206dp"
            android:layout_height="62dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="330dp"
            android:layout_weight="20"
            android:text="Chocolate Icing Cake"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_marginStart="210dp"
            android:layout_marginBottom="80dp"
            android:text="Wedding Cake"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="211dp"
            android:layout_height="259dp"
            android:layout_marginEnd="185dp"
            android:layout_marginBottom="95dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/birthdaycake" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="214dp"
            android:layout_height="372dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="230dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:srcCompat="@drawable/blackyf" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="179dp"
            android:layout_height="62dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="32dp"
            android:text="Birthday Cake"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="199dp"
            android:layout_height="61dp"
            android:layout_marginStart="220dp"
            android:layout_marginBottom="32dp"
            android:text="Blacforest Cake"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>