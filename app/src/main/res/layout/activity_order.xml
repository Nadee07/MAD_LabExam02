<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple2"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtsummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/agbalumo"
            android:text="Order Summary"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imglogo5"
        android:layout_width="189dp"
        android:layout_height="107dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="55dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPrev2"
            android:layout_width="68dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/previous" />

        <TextView
            android:id="@+id/txtorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="   Order                      2700Rs   "
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="   Delivery                     350Rs   "
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtDelivery2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="   Total                       3050Rs   "
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtpmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/agbalumo"
            android:text="Payment Methods"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="Credit Card"
            android:textColor="#473535"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radiobtn2"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBE9E7"
            android:text="Debit Card"
            android:textColor="#473535"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="451dp"
            android:layout_height="76dp"
            android:text="Save card details for future payments"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnpay"
            android:layout_width="258dp"
            android:layout_height="74dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/black"
            android:text="Pay Now"
            android:textSize="28sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="863dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>